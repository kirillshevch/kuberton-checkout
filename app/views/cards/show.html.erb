<div class='col-12'>
  <div class='card'>
    <div class='card-body'>
      <% flash.each do |key, value| %>
        <div class="mt-sm-3 mr-sm-3 ml-sm-3 <%= flash_class(key) %>">
          <%= value %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <%= form_for :payment, url: {action: :create, controller: :payments } do %>
        <div class='form-group'>
          <label class='control-label'>
            Card Number *
          </label>
          <input class='form-control' required name='number'/>
        </div>
        <div class='form-group'>
          <div class='row'>
            <div class='col-8'>
              <div class='row'>
                <div class='col-6'>
                  <label class='control-label'>
                    Month *
                  </label>
                  <select class='form-control' name='month'>
                    <%= 12.times.each do |n| %>
                      <option value='<%= n + 1 %>'><%= n + 1 %></option>
                    <% end %>
                  </select>
                </div>
                <div class='col-6'>
                  <label class='control-label'>
                    Year *
                  </label>
                  <select class='form-control' name='year'>
                    <%= 8.times.each do |n| %>
                      <option value='<%= Time.now.year + n %>'><%= Time.now.year + n %></option>
                    <% end %>
                  </select>
                </div>
              </div>
            </div>
            <div class='col-4'>
              <label class='control-label'>
                CVV *
              </label>
              <input class='form-control' name='cvv' type='number' step='1' />
            </div>
          </div>
        </div>
        <div class='text-right'>
          <button type='submit' class='btn btn-lg btn-primary'>Pay</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
